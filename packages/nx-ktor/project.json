{
  "name": "nx-ktor",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nx-ktor/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/nx-ktor",
        "main": "packages/nx-ktor/src/index.ts",
        "tsConfig": "packages/nx-ktor/tsconfig.lib.json",
        "assets": [
          "packages/nx-ktor/*.md",
          {
            "input": "./packages/nx-ktor/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/nx-ktor/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/nx-ktor",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/nx-ktor",
            "glob": "executors.json",
            "output": "."
          },
          {
            "input": "./packages/nx-ktor",
            "glob": "migrations.json",
            "output": "."
          }
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs nx-ktor {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/nx-ktor/**/*.ts",
          "packages/nx-ktor/generators.json",
          "packages/nx-ktor/executors.json",
          "packages/nx-ktor/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/nx-ktor/jest.config.ts"
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release"
    }
  },
  "tags": []
}
