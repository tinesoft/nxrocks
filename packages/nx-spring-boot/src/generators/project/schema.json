{
  "$schema": "http://json-schema.org/schema",
  "id": "Nx Spring Boot project generator",
  "title": "Creates a Spring boot project in the workspace",
  "cli": "nx",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the project to generate",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "projectType": {
      "description": "Type of project",
      "default": "application",
      "type": "string",
      "enum": ["application", "library"],
      "x-prompt": {
        "message": "What kind of project are you generating?",
        "type": "list",
        "items": [
          {
            "value": "application",
            "label": "Application"
          },
          {
            "value": "library",
            "label": "Library"
          }
        ]
      }
    },
    "buildSystem": {
      "description": "Build system to use",
      "alias": "type",
      "default": "maven-project",
      "type": "string",
      "enum": ["maven-project", "gradle-project"],
      "x-prompt": {
        "message": "Which build system would you like to use?",
        "type": "list",
        "items": [
          {
            "value": "maven-project",
            "label": "Maven"
          },
          {
            "value": "gradle-project",
            "label": "Gradle"
          }
        ]
      }
    },
    "packaging": {
      "description": "Packaging of the project",
      "type": "string",
      "default": "jar",
      "enum": ["jar", "war"],
      "x-prompt": {
        "message": "Which packaging would you like to use?",
        "type": "list",
        "items": [
          {
            "value": "jar",
            "label": "Jar"
          },
          {
            "value": "war",
            "label": "War"
          }
        ]
      }
    },
    "javaVersion": {
      "description": "Java version",
      "oneOf": [
        {
          "type":"string"
        },
        {
          "type":"number"
        }
      ],
      "default": "11",
      "enum": ["1.8", "11", "17"],
      "x-prompt": {
        "message": "Which version of Java would you like to use?",
        "type": "list",
        "items": [
          {
            "value": "18",
            "label": "18"
          },
          {
            "value": "17",
            "label": "17"
          },
          {
            "value": "11",
            "label": "11"
          },
          {
            "value": "1.8",
            "label": "8"
          }
        ]
      }
    },
    "language": {
      "description": "Language of the project",
      "type": "string",
      "default": "java",
      "enum": ["java", "kotlin", "groovy"],
      "x-prompt": {
        "message": "Which language would you like to use?",
        "type": "list",
        "items": [
          {
            "value": "java",
            "label": "Java"
          },
          {
            "value": "kotlin",
            "label": "Kotlin"
          },
          {
            "value": "groovy",
            "label": "Groovy"
          }
        ]
      }
    },
    "groupId": {
      "type": "string",
      "default": "com.example",
      "x-prompt": "What groupId would you like to use?"
    },
    "artifactId": {
      "type": "string",
      "default": "demo",
      "x-prompt": "What artifactId would you like to use?"
    },
    "packageName": {
      "type": "string",
      "default": "com.example.demo",
      "x-prompt": "What package name would you like to use?"
    },
    "description": {
      "type": "string",
      "x-prompt": "What is the project about?"
    },
    "skipFormat": {
      "type": "boolean",
      "default": true,
      "x-prompt": "Skip code formatting support(using Spotless plugin)?"
    },
    "dependencies": {
      "type": "string",
      "default": "",
      "x-prompt": "What dependencies would you like to use (comma separated)?\nðŸ‘‰ Go to https://start.spring.io/dependencies to get the ids needed here"
    },
    "springInitializerUrl": {
      "type": "string",
      "default": "https://start.spring.io",
      "description": "The URL to the Spring Initializer instance to use to generate the project"
    },
    "proxyUrl": {
      "type": "string",
      "description": "The URL of the (corporate) proxy server to use to access Spring Initializr"
    },
    "bootVersion": {
      "type": "string",
      "description": "Spring Boot version"
    },
    "version": {
      "type": "string",
      "description": "Version of the project to generate",
      "alias": "v"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    },
    "directory": {
      "type": "string",
      "description": "A directory where the project is placed",
      "alias": "d"
    }
  },
  "required": [
    "name"
  ]
}