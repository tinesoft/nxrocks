{
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "Application",
  "title": "Creates a Spring boot project in the workspace",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the project",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "type": {
      "description": "Type of project",
      "default": "maven-project",
      "type": "string",
      "x-prompt": {
        "message": "Which type of project would you like to generate?",
        "type": "list",
        "items": [
          {
            "value": "maven-project",
            "label": "Maven Project"
          },
          {
            "value": "gradle-project",
            "label": "Gradle Project"
          }
        ]
      }
    },
    "packaging": {
      "description": "Packaging of the project",
      "type": "string",
      "default": "jar",
      "x-prompt": {
        "message": "Which packaging would you like to use?",
        "type": "list",
        "items": [
          {
            "value": "jar",
            "label": "Jar"
          },
          {
            "value": "war",
            "label": "War"
          }
        ]
      }

    },
    "javaVersion": {
      "description": "Java version",
      "type": "string",
      "default": "11",
      "x-prompt": {
        "message": "Which version of Java would you like to use?",
        "type": "list",
        "items": [
          {
            "value": "15",
            "label": "15"
          },
          {
            "value": "11",
            "label": "11"
          },
          {
            "value": "1.8",
            "label": "8"
          }
        ]
      }
    },
    "language": {
      "description": "Language of the project",
      "type": "string",
      "default": "java",
      "x-prompt": {
        "message": "Which language would you like to use?",
        "type": "list",
        "items": [
          {
            "value": "java",
            "label": "Java"
          },
          {
            "value": "kotlin",
            "label": "Kotlin"
          },
          {
            "value": "groovy",
            "label": "Groovy"
          }
        ]
      }
    },
    "groupId": {
      "type": "string",
      "default": "com.example",
      "x-prompt": "What groupId would you like to use?"
    },
    "artifactId": {
      "type": "string",
      "default": "demo",
      "x-prompt": "What artifactId would you like to use?"
    },
    "packageName": {
      "type": "string",
      "default": "com.example.demo",
      "x-prompt": "What package name would you like to use?"
    },
    "description": {
      "type": "string",
      "x-prompt": "What is the project about?"
    },
    "dependencies": {
      "type": "string",
      "default": "",
      "x-prompt": "What dependencies would you like to use (comma separated)?\nüëâüèæ Go to https://start.spring.io/dependencies to get the ids needed here"
    },
    "springInitializerUrl": {
      "type": "string",
      "default": "https://start.spring.io",
      "description": "The URL to the Spring Initializer instance to use to generate the project"
    },
    "bootVersion": {
      "type": "string",
      "description": "Spring Boot version"
    },
    "version": {
      "type": "string",
      "description": "Version of the project to generate",
      "alias": "v"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    },
    "directory": {
      "type": "string",
      "description": "A directory where the project is placed",
      "alias": "d"
    }
  },
  "required": [
    "name"
  ]
}